<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffcc80" />
            <gradient android:angle="-90" android:startColor="#ffb74d" android:endColor="#ffcc80"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffcc80" />
            <solid android:color="#ffcc80"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fb8c00" />
            <gradient android:angle="-90" android:startColor="#fff3e0" android:endColor="#ffcc80" />
        </shape>
    </item>
</selector>